# F1 Bets Configuration
# Copy this file to .env and set all required values

# ===================
# REQUIRED - No defaults, must be explicitly set
# ===================

# Database credentials (REQUIRED)
POSTGRES_USER=<YOUR_DB_USERNAME>
POSTGRES_PASSWORD=<YOUR_SECURE_PASSWORD>
POSTGRES_DB=<YOUR_DB_NAME>

# ===================
# OPTIONAL - Have sensible defaults
# ===================

# Application
APP_PORT=8090

# Database host (defaults to container name in docker-compose)
POSTGRES_HOST=f1bets-db
POSTGRES_PORT=5432

# External ports (host:container)
DB_EXTERNAL_PORT=5432
APP_EXTERNAL_PORT=8090

# ===================
# OPTIONAL - Advanced configuration
# ===================

# OpenF1 API
OPENF1_BASE_URL=https://api.openf1.org/v1
OPENF1_TIMEOUT=5000
OPENF1_CACHE_TTL=180
OPENF1_MAX_SESSIONS=6

# Odds calculation
ODDS_SEED=F1BETS_SEED

# Logging
LOG_LEVEL_APP=INFO
LOG_LEVEL_SPRING=INFO

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=1m

# CORS (for production, override with explicit origins)
# CORS_ALLOWED_ORIGINS=https://your-production-domain.com

# Spring profile (use 'production' for production deployment)
# SPRING_PROFILES_ACTIVE=production
